<main class="main-menu">
  <h1>Welcome, {{name}}</h1>
  <section class="last-sheet">
    Последняя таблица
  </section>
  <section class="content">
    <section class="sheets">
      <h2>Character tables</h2>
      <ul id="sheets">
        <li>
          <a href="sheet/new">Create new</a>
        </li>
        <br />
        {{#if userSheets}}
          {{#each userSheets}}
            <li>

              <a href="/sheet/{{this.id}}">{{this.name}}</a>
            </li>
          {{/each}}
        {{else}}
          <li> No sheets yet </li>
        {{/if}}
      </ul>
    </section>
    <section class="rules">

      <h2>Rules</h2>
      <ul>
        {{#each rules}}
          <li>
            <a href="/rules/{{this.index}}">
              {{this.name}}
            </a>
          </li>
        {{/each}}
      </ul>
    </section>
  </section>

</main>
