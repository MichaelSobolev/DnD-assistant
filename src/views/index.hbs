<main class="main-menu">
  <h1>Welcome, <span class="accent-color">{{name}}</span></h1>
  <section class="last-sheet">
    Последняя таблица:
    {{lastSheet.name}}
    {{lastSheet.race}}
    {{lastSheet.class}}
    <div>ID:
      {{lastSheet.id}}
    </div>
    <div>
      createdAt:
      {{lastSheet.createdAt}}
    </div>
    <div>
      updatedAt:
      {{lastSheet.updatedAt}}
    </div>
  </section>
  <section class="content">
    <section class="sheets">
      <h2>Character tables</h2>
      <ul class="sheets__list">
        <li>
          <a href="sheet/new">Create new</a>
        </li>
        {{#if userSheets}}
          {{#each userSheets}}
            <li>

              <a href="/sheet/{{this.id}}">{{this.name}}</a>
            </li>
          {{/each}}
        {{else}}
          <li> No sheets yet </li>
        {{/if}}
      </ul>
    </section>
    <section class="rules">
      <h2>Rules</h2>
      <ul class="rules__list">
        {{#each rules}}
          <li>
            <a href="/rules/{{this.index}}">
              {{this.name}}
            </a>
          </li>
        {{/each}}
      </ul>
    </section>
  </section>

</main>
